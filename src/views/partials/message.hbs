 {{#if message }}
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="alert alert-danger alert-dismissible fade show mt-5" rolw="alert">
                    {{message}}
                    <button type="button" class="close btn pmtv-btn-msg" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
 {{/if}}
 
 {{#if success}}
 	<div class="container p-4">
 		<div class="row">
 			<div class="col-md-4 mx-auto">
 				<div class="alert alert-success alert-dismissible fade show mt-5" rolw="alert">
 					{{success}}
 					<button type="button" class="close btn pmtv-btn-msg" data-dismiss="alert" aria-label="Close">
 						<span aria-hidden="true">&times;</span>
 					</button>
 				</div>
 			</div>
 		</div>
 	</div>
 {{/if}}

 