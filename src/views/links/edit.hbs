<div class="pmtv-link-edit container p-4">
	<div class="row">
		<div class="col-md-4 mx-auto">
			<div class="card">
				<div class="card-body">
					<form action="/links/edit/{{link.id}}" method="POST">
						<div class="form-group mb-3">
							<input type="text" value="{{link.titulo}}" class="form-control" name="titulo" placeholder="Título" autofocus>
						</div>
						<div class="form-group mb-3">
							<textarea class="form-control" name="detalle_principal" rows="2" placeholder="Descripción">{{link.detalle_principal}}</textarea>
						</div>
						<div class="form-group mb-3">
							<input type="number" value="{{link.precio}}" class="form-control" name="precio" placeholder="Precio">
						</div>
						<div class="form-group mb-3">
							<button class="btn btn-success w-100 btn-block">Enviar</button>
						</div>
					</form>
				</div>
			</div>	
		</div>	
	</div>
</div>